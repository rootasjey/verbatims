# .env.example

# Necessary to create the first admin user
ADMIN_PASSWORD=

# Nuxt Auth Configuration
NUXT_SESSION_PASSWORD=

# Default Admin User Configuration (used on first startup)
# If not set, secure defaults will be used
USER_USERNAME=
USER_EMAIL=
USER_PASSWORD=

# Meta OAuth app credentials (required for "Reconnect Meta" in /admin/social-queue)
# Can be overridden in admin settings (stored in KV)
META_APP_ID=
META_APP_SECRET=
# Optional override. Default callback is {origin}/api/admin/social/meta/callback
META_REDIRECT_URI=

# Automated social posting
# For X / Bluesky / Pinterest, values can be edited in /admin/social-queue and stored in KV.
# Resolution order for those providers is: KV -> env -> defaults.
NUXT_X_POST_ENABLED=true
# OAuth 2.0 User Context access token (preferred for basic posting)
NUXT_X_POST_ACCESS_TOKEN=
# Legacy alias (deprecated): NUXT_X_POST_BEARER_TOKEN
NUXT_X_POST_BEARER_TOKEN=
# OAuth 1.0a User Context (required for media upload to X)
NUXT_X_POST_OAUTH1_CONSUMER_KEY=
NUXT_X_POST_OAUTH1_CONSUMER_SECRET=
NUXT_X_POST_OAUTH1_ACCESS_TOKEN=
NUXT_X_POST_OAUTH1_ACCESS_TOKEN_SECRET=
NUXT_X_POST_REQUIRE_MEDIA=false

NUXT_BLUESKY_POST_ENABLED=false
NUXT_BLUESKY_POST_SERVICE=https://bsky.social
NUXT_BLUESKY_POST_IDENTIFIER=
NUXT_BLUESKY_POST_PASSWORD=

NUXT_INSTAGRAM_POST_ENABLED=false
NUXT_INSTAGRAM_POST_BASE_URL=https://graph.facebook.com
NUXT_INSTAGRAM_POST_API_VERSION=v25.0
NUXT_INSTAGRAM_POST_ACCESS_TOKEN=
NUXT_INSTAGRAM_POST_IG_USER_ID=
NUXT_INSTAGRAM_POST_HASHTAGS=#quotes #inspiration #verbatims
NUXT_INSTAGRAM_POST_POLL_INTERVAL_MS=5000
NUXT_INSTAGRAM_POST_POLL_TIMEOUT_MS=300000

NUXT_THREADS_POST_ENABLED=false
NUXT_THREADS_POST_BASE_URL=https://graph.threads.net
NUXT_THREADS_POST_API_VERSION=v1.0
NUXT_THREADS_POST_ACCESS_TOKEN=
NUXT_THREADS_POST_USER_ID=
NUXT_THREADS_POST_POLL_INTERVAL_MS=4000
NUXT_THREADS_POST_POLL_TIMEOUT_MS=120000

NUXT_FACEBOOK_POST_ENABLED=false
NUXT_FACEBOOK_POST_BASE_URL=https://graph.facebook.com
NUXT_FACEBOOK_POST_API_VERSION=v25.0
NUXT_FACEBOOK_POST_ACCESS_TOKEN=
NUXT_FACEBOOK_POST_PAGE_ID=

NUXT_PINTEREST_POST_ENABLED=false
NUXT_PINTEREST_POST_BASE_URL=https://api-sandbox.pinterest.com
NUXT_PINTEREST_POST_API_VERSION=v5
NUXT_PINTEREST_POST_ACCESS_TOKEN=
NUXT_PINTEREST_POST_BOARD_ID=

NUXT_SOCIAL_DAILY_TIMEZONE=Europe/Paris
NUXT_SOCIAL_DAILY_TIME=08:08
