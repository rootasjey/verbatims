{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~": ["./app"],
      "~/*": ["./app/*"],
      "~/types": ["./types"],
      "~/types/*": ["./types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./"]
  },
  // Make sure TypeScript picks up the shared type declaration files.
  "include": [
    "shared/types/**/*.d.ts",
    "types/**/*.d.ts",
    "auto-imports.d.ts",
    "nuxt.d.ts",
    ".nuxt/imports.d.ts",
    ".nuxt/components.d.ts"
  ]
}
